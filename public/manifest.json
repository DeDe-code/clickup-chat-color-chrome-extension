{
  "manifest_version": 3,
  "name": "ClickUp Extender",
  "version": "1.0.0",
  "description": "Extends ClickUp functionality with message highlighting and more.",
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "host_permissions": ["https://app.clickup.com/*"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://app.clickup.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
